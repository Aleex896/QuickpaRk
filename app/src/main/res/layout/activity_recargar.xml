<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/Azul">

    <Button
        android:id="@+id/bVolver"
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/flecha_izquierda"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/tvRecargas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/tvRecargas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Recargar cuenta"
        android:textColor="@color/blanco"
        android:textSize="40dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/bVolver" />

    <TextView
        android:id="@+id/tvRecargasTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="Datos Recarga"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        android:layout_below="@+id/tvRecargas"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_gravity="left"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/blanco"
        android:layout_below="@id/tvRecargasTitle"/>

    <LinearLayout
        android:id="@+id/llDatosPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/view">

        <TextView
            android:id="@+id/tvDineroRecarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad que desea recargar"
            android:textSize="18dp"

            android:textColor="@color/blanco"/>
        <EditText
            android:id="@+id/etDinero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:inputType="number"
            android:textColor="@color/Azul"
            android:background="@color/blanco"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnPay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/grisclaro"
        android:textColor="@color/blanco"
        android:text="Realizar Pago"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/llDatosPago"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
