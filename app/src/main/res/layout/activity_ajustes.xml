<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.alex.quickpark.FirstScreen"
    android:background="@color/Azul"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="143dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/bAjustesUsu"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginRight="10dp"
            android:background="@color/blanco"
            android:src="@drawable/icono_ajustesusu" />

        <ImageButton
            android:id="@+id/bAjustesMon"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@color/blanco"
            android:src="@drawable/icono_monederoaju"
            android:layout_below="@+id/bAjustesMone"
            android:layout_toEndOf="@+id/bAjustesVehi" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="119dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linear1"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/bAjustesVehi"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@color/blanco"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icono_cocheaju" />

        <ImageButton
            android:id="@+id/bSalirAjustes"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@color/blanco"
            android:layout_marginTop="10dp"
            android:src="@drawable/icono_saliraju"
            android:layout_toEndOf="@+id/bAjustesUsu" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/bMaps"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@color/blanco"
            android:src="@drawable/icono_mapa"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"></ImageButton>

        <ImageButton
            android:id="@+id/bQr"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@color/blanco"
            android:src="@drawable/icono_qr"
            android:layout_alignParentStart="true"
            android:layout_marginRight="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:text="QR" />

        <ImageButton
            android:id="@+id/bPref"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@color/blanco"
            android:src="@drawable/icono_pref"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="ConfiguraciÃ³n" />
    </LinearLayout>

</RelativeLayout>
