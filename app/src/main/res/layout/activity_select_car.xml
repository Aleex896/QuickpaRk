<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.quickpark.SelectCarActivity"
    android:background="@color/Azul">
    <Button
        android:id="@+id/bVolver"
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/flecha_izquierda"
        android:layout_alignBottom="@+id/tVIniciar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tVIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona tu vehiculo:"
        android:textColor="@color/blanco"
        android:textSize="30dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/bVolver"
        android:layout_marginStart="17dp" />

</RelativeLayout>
