<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.alex.quickpark.FirstScreen"
    android:background="@color/Azul"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/cameraView2"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@color/blanco"
            android:layout_below="@+id/cameraView2"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/biniQr"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:onClick="onClick"
            android:src="@drawable/qron_icon"
            android:background="@color/blanco"
            android:layout_below="@+id/cameraView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp" />
    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp">
        <ImageButton
            android:id="@+id/bMaps"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@color/blanco"
            android:src="@drawable/icono_mapa"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"></ImageButton>

        <ImageButton
            android:id="@+id/bQr"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@color/blanco"
            android:src="@drawable/icono_qr"
            android:layout_alignParentStart="true"
            android:layout_marginRight="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:text="QR" />

        <ImageButton
            android:id="@+id/bPref"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@color/blanco"
            android:src="@drawable/icono_pref"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="ConfiguraciÃ³n" />
    </LinearLayout>

</RelativeLayout>